<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Matcha Powered Community</h1>
        <p>Welcome to the Matcha Powered Community. Users must fill out a profile in order to be visible in the community.</p>
        <ul class="list-unstyled">
            <% @users.each do |user| %>
                <% if user.profile %>
                    <li>
                        <div class="well row <%= cycle('matcha-bg', '') %>">
                            <div class="col-sm-4 text-center">
                                <% if user.profile.avatar %>
                                    <%= link_to user do %>
                                        <%= image_tag user.profile.avatar.url(:thumb), class: 'img-circle' %><br />
                                    <% end %>
                                <% end %>
                            </div><!--/ user col and text align closing div -->
                            <div>
                                <%= link_to user do %>
                                <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                <% end %>
                                <p>
                                    <%= user.profile.job_title %> 
                                    <% if user.plan_id == 2 %>
                                        <span class="label label-danger">PRO</span>
                                    <% end %>
                                </p>
                            </div><!--/user first/last title div -->
                        </div><!--/user avatar well row closing div -->
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>